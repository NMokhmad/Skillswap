<!-- header -->
<%- include('../partials/header.ejs') %>
    <script src="https://kit.fontawesome.com/626daf36fc.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <!-- ══════════ HERO ══════════ -->
    <section class="ss-hero">
        <div class="ss-hero-glow ss-hero-glow--right"></div>
        <div class="ss-hero-glow ss-hero-glow--left"></div>

        <div class="ss-hero-content">
            <p class="ss-kicker">
                <span class="ss-kicker-line"></span>
                Échangez &bull; Apprenez &bull; Grandissez
                <span class="ss-kicker-line"></span>
            </p>

            <h1 class="ss-hero-title">
                Bienvenue sur<br><em>SkillSwap</em>
            </h1>

            <p class="ss-hero-sub">
                Votre aventure d'apprentissage commence ici.
            </p>

            <div class="ss-hero-actions">
                <a href="/skills" class="ss-btn ss-btn--primary">
                    Explorer les compétences
                </a>
                <a href="/talents" class="ss-btn ss-btn--ghost">
                    <i class="fa-solid fa-users"></i>
                    Découvrir les talents
                </a>
            </div>

            <div class="ss-skills-carousel">
                <p class="ss-carousel-label">Compétences populaires</p>
                <div class="ss-slider">
                    <div class="ss-track">
                        <% skills.forEach((skill, index) => { %>
                            <a href="/skills/<%= skill.slug %>" class="ss-skill-chip ss-skill-chip--<%= index % 6 %>" title="<%= skill.label %>">
                                <i class="fa-solid <%= skill.icon %>"></i>
                            </a>
                        <% }) %>
                        <!-- Dupliquer pour animation infinie -->
                        <% skills.forEach((skill, index) => { %>
                            <a href="/skills/<%= skill.slug %>" class="ss-skill-chip ss-skill-chip--<%= index % 6 %>" title="<%= skill.label %>">
                                <i class="fa-solid <%= skill.icon %>"></i>
                            </a>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ══════════ À PROPOS ══════════ -->
    <section class="ss-about" id="about">
        <div class="ss-about-grid">
            <div class="ss-about-text">
                <span class="ss-tag">
                    <i class="fa-solid fa-info-circle"></i>
                    À propos
                </span>

                <h2 class="ss-section-title">Qui sommes-nous&nbsp;?</h2>

                <div class="ss-about-body">
                    <p><strong>Skill Swap</strong> est une plateforme innovante conçue pour permettre l'échange de compétences et de connaissances au sein d'une communauté. Elle repose sur l'idée que chacun possède quelque chose d'unique à offrir, que ce soit des compétences professionnelles, des talents artistiques, des connaissances linguistiques ou des passe-temps.</p>
                    <p>Skill Swap vise à encourager l'apprentissage mutuel, la collaboration et l'établissement de relations dans un environnement convivial et enrichissant.</p>
                </div>

                <div class="ss-stats">
                    <div class="ss-stat">
                        <span class="ss-stat-num">500+</span>
                        <span class="ss-stat-label">Membres</span>
                    </div>
                    <div class="ss-stat">
                        <span class="ss-stat-num">1200+</span>
                        <span class="ss-stat-label">Échanges</span>
                    </div>
                    <div class="ss-stat">
                        <span class="ss-stat-num"><%= skills.length %></span>
                        <span class="ss-stat-label">Compétences</span>
                    </div>
                </div>
            </div>

            <div class="ss-about-visual">
                <img src="/img/shutterstock_1521006890.png" alt="À propos de SkillSwap" loading="lazy">
            </div>
        </div>
    </section>

    <!-- ══════════ PROFILS ══════════ -->
    <section class="ss-profiles" id="profiles">
        <div class="ss-container">
            <div class="ss-section-header">
                <span class="ss-tag ss-tag--amber">
                    <i class="fa-solid fa-trophy"></i>
                    Talents d'exception
                </span>
                <h2 class="ss-section-title ss-section-title--light">Nos Meilleurs Profils</h2>
                <p class="ss-section-sub">Découvrez les talents les mieux notés de notre communauté</p>
            </div>

            <div class="ss-profiles-grid">
                <% topUsers.forEach((user, index) => { %>
                    <article class="ss-profile-card">

                        <% if (index < 3) { %>
                            <div class="ss-rank-badge">
                                <i class="fa-solid fa-crown"></i>
                                Top <%= index + 1 %>
                            </div>
                        <% } %>

                        <div class="ss-card-img">
                            <img src="./img/<%= user.image %>" alt="Profil <%= user.firstname %>" loading="lazy">
                            <div class="ss-card-overlay"></div>
                        </div>

                        <div class="ss-card-body">
                            <div class="ss-card-avatar ss-avatar--<%= index % 3 %>">
                                <i class="fa-solid fa-user"></i>
                            </div>

                            <div class="ss-card-info">
                                <h3>
                                    <a href="/talents/<%= user.id %>" class="ss-card-name">
                                        <%= user.firstname %> <%= user.lastname %>
                                    </a>
                                </h3>

                                <p class="ss-card-interest">
                                    <i class="fa-solid fa-briefcase"></i>
                                    <%= user.interest %>
                                </p>

                                <div class="ss-rating">
                                    <% if (user.avg_reviews > 0) { %>
                                        <div class="ss-stars">
                                            <% for (let i = 0; i < 5; i++) { %>
                                                <i class="fas fa-star <%= i < user.avg_reviews ? 'ss-star--on' : 'ss-star--off' %>"></i>
                                            <% } %>
                                        </div>
                                        <span class="ss-rating-score"><%= user.avg_reviews.toFixed(1) %>/5</span>
                                    <% } else { %>
                                        <span class="ss-no-rating">Pas encore de note</span>
                                    <% } %>
                                </div>

                                <a href="/talents/<%= user.id %>" class="ss-btn ss-btn--card">
                                    Voir le profil
                                    <i class="fa-solid fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                <% }) %>
            </div>

            <div class="ss-see-all">
                <a href="/talents" class="ss-btn ss-btn--outline-light">
                    <i class="fa-solid fa-users"></i>
                    Voir tous les talents
                </a>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>
