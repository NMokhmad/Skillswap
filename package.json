{
  "name": "skill-swap",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "lint": "eslint index.js app/createApp.js app/database.js app/helpers/*.js app/middlewares/requestId.js app/middlewares/requestLogger.js app/middlewares/jwtVerify.js app/controllers/healthController.js app/controllers/authController.js app/controllers/messageController.js app/controllers/notificationController.js app/controllers/searchController.js app/sockets/messageHandler.js tests/jwtVerify.test.js tests/requestId.test.js tests/socketPayloadValidation.test.js tests/authLoginSecurity.test.js tests_integration/helpers/controllerHarness.js tests_integration/*.test.js",
    "db:create": "psql -U skillswap -d skillswap -f ./data/create_db.sql",
    "db:seed": "psql -U skillswap -d skillswap -f ./data/seeding_tables.sql",
    "db:seed:prod": "node scripts/seed.js",
    "db:reset": "npm run db:create && npm run db:seed",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --testPathPattern=tests/",
    "test:integration": "node --experimental-vm-modules node_modules/.bin/jest --runInBand --testPathPattern=tests_integration/",
    "test:all": "npm test -- --runInBand && npm run test:integration",
    "ci:check:migrations": "node scripts/ci-check.js",
    "ci:check": "npm run lint && npm run test:all && npm run ci:check:migrations",
    "demo:setup": "npm run db:reset",
    "demo:reset": "npm run db:reset",
    "demo:smoke": "node scripts/demo-smoke.js",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "migrate:status": "npx sequelize-cli db:migrate:status"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/O-clock-Raclette/skill-swap.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/O-clock-Raclette/skill-swap/issues"
  },
  "homepage": "https://github.com/O-clock-Raclette/skill-swap#readme",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.5"
  },
  "dependencies": {
    "argon2": "^0.41.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "multer": "^2.0.2",
    "pg": "^8.13.1",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.5",
    "socket.io": "^4.8.3"
  }
}
